<Window x:Class="aoci_lab3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:aoci_lab3"
        mc:Ignorable="d"
        Title="Лабораторная работа #3" Height="650" Width="1020">
    <Grid>
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="200"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" BorderBrush="DimGray" BorderThickness="1" Margin="5">
            <StackPanel Margin="5">

                <Button Content="Открыть изображение" Click="LoadImage_Click" Margin="0,0,0,5" FontWeight="Bold"/>
                <Button Content="Сохранить изображение" Click="SaveImage_Click" Margin="0,0,0,20" FontWeight="Bold"/>
                <Button Content="Применить изменения" Click="UpdateImage_Click" Margin="0,0,0,5"/>
                <Button Content="Сбросить" Click="Clear_Click" Margin="0,0,0,20"/>

                <Border BorderBrush="DimGray" BorderThickness="1" Margin="5">
                    <StackPanel Margin="5">
                        <Label Content="Базовое изменение" HorizontalContentAlignment="Center" FontWeight="Bold"/>

                        <Label Content="Перемещение X"/>
                        <Slider Minimum="-512" Maximum="512" Value="0" Name="BasicTranslateSliderX" ValueChanged="OnGeometryFilterChanged"/>

                        <Label Content="Перемещение Y"/>
                        <Slider Minimum="-512" Maximum="512" Value="0" Name="BasicTranslateSliderY" ValueChanged="OnGeometryFilterChanged"/>

                        <Label Content="Масштаб X"/>
                        <Slider Minimum="0.1" Maximum="3.0" Value="1.0" Name="BasicScaleSliderX" ValueChanged="OnGeometryFilterChanged"/>

                        <Label Content="Масштаб Y"/>
                        <Slider Minimum="0.1" Maximum="3.0" Value="1.0" Name="BasicScaleSliderY" ValueChanged="OnGeometryFilterChanged"/>

                        <Label Content="Угол поворота"/>
                        <Slider Minimum="-180" Maximum="180" Value="0" Name="BasicRotationSlider" ValueChanged="OnGeometryFilterChanged"/>

                        <Label Content="Сдвиг X"/>
                        <Slider Minimum="-45.0" Maximum="45.0" Value="0" Name="BasicShearSliderX" ValueChanged="OnGeometryFilterChanged"/>

                        <Label Content="Сдвиг Y"/>
                        <Slider Minimum="-45.0" Maximum="45.0" Value="0" Name="BasicShearSliderY" ValueChanged="OnGeometryFilterChanged"/>

                        <RadioButton Name="NoFilteringCheckBox" Content="Без фильтрации" Margin="0,10,0,0" Checked="OnGeometryFilterChanged" Unchecked="OnGeometryFilterChanged" GroupName="Group1" IsChecked="True"/>
                        <RadioButton Name="GapFilteringCheckBox" Content="Нахождение среднего" Margin="0,10,0,0" Checked="OnGeometryFilterChanged" Unchecked="OnGeometryFilterChanged" GroupName="Group1"/>
                        <RadioButton Name="BrushSizeCheckBox" Content="Расширение кисти" Margin="0,10,0,10" Checked="OnGeometryFilterChanged" Unchecked="OnGeometryFilterChanged" GroupName="Group1"/>
                    </StackPanel>
                </Border>

                

            </StackPanel>
        </Border>

        <Border Grid.Column="1" BorderBrush="DimGray" BorderThickness="1" Margin="5">
            <Image Name="MainImage"  Margin="5" Stretch="Uniform"/>
        </Border>

        <Border Grid.Column="2" BorderBrush="DimGray" BorderThickness="1" Margin="5">

            <StackPanel Margin="5">

                <Border BorderBrush="DimGray" BorderThickness="1" Margin="5">
                    <StackPanel Margin="5">
                        <Label Content="Инверсное изменение" HorizontalContentAlignment="Center" FontWeight="Bold"/>

                        <Label Content="Масштаб X"/>
                        <Slider Minimum="0.1" Maximum="3.0" Value="1.0" Name="ScaleInverseXSlider" ValueChanged="OnInversedGeometryFilterChanged"/>

                        <Label Content="Масштаб Y"/>
                        <Slider Minimum="0.1" Maximum="3.0" Value="1.0" Name="ScaleInverseYSlider" ValueChanged="OnInversedGeometryFilterChanged"/>

                        <Label Content="Угол поворота"/>
                        <Slider Minimum="-180" Maximum="180" Value="0" Name="RotationSlider" ValueChanged="OnInversedGeometryFilterChanged"/>

                        <Label Content="Сдвиг X"/>
                        <Slider Minimum="-45.0" Maximum="45.0" Value="0" Name="ShearSliderX" ValueChanged="OnInversedGeometryFilterChanged"/>

                        <Label Content="Сдвиг Y"/>
                        <Slider Minimum="-45.0" Maximum="45.0" Value="0" Name="ShearSliderY" ValueChanged="OnInversedGeometryFilterChanged" Margin="0,0,0,20"/>



                    </StackPanel>
                </Border>

                <Border Grid.Column="1" BorderBrush="DimGray" BorderThickness="1" Margin="5">
                    <StackPanel Margin="5">
                        
                        <Label Content="Эффект волны" HorizontalContentAlignment="Center" FontWeight="Bold"/>

                        <Label Content="Амплитуда"/>
                        <Slider Minimum="0" Maximum="50" Value="0" Name="WaveAmplitude" ValueChanged="OnWaveFilterChanged"/>

                        <Label Content="Частота"/>
                        <Slider Minimum="0" Maximum="0.2" Value="0" Name="WaveFrequency" ValueChanged="OnWaveFilterChanged" Margin="0,0,0,20"/>

                    </StackPanel>
                </Border>

                <Border Grid.Column="1" BorderBrush="DimGray" BorderThickness="1" Margin="5">
                    <StackPanel Margin="5">

                        <Label Content="Эффект воронки" VerticalContentAlignment="Center" FontWeight="Bold"/>
                        <Label Content="Сила"/>
                        <Slider Minimum="-10.0" Maximum="10.0" Value="0.0" Name="TwirlStrength" ValueChanged="OnTwirlFilterChanged" Margin="0,0,0,20"/>

                    </StackPanel>
                </Border>

            </StackPanel>
        </Border>

    </Grid>
</Window>
