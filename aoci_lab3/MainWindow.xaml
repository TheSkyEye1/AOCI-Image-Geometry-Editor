<Window x:Class="aoci_lab3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:aoci_lab3"
        mc:Ignorable="d"
        Title="Лабораторная работа #3" Height="500" Width="800">
    <Grid>
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Row="1" Grid.Column="0" BorderBrush="DimGray" BorderThickness="1" Margin="5">
            <StackPanel Margin="5">

                <Button Content="Открыть изображение" Click="LoadImage_Click" Margin="0,0,0,5" FontWeight="Bold"/>
                <Button Content="Сохранить изображение" Click="SaveImage_Click" Margin="0,0,0,20" FontWeight="Bold"/>
                <Button Content="Применить изменения" Click="UpdateImage_Click" Margin="0,0,0,5"/>
                <Button Content="Сбросить" Click="Clear_Click" Margin="0,0,0,20"/>


                <Label Content="Масштаб X"/>
                <Slider Minimum="0.1" Maximum="3.0" Value="1.0" Name="ScaleXSlider" ValueChanged="OnGeometryFilterChanged"/>

                <Label Content="Масштаб Y"/>
                <Slider Minimum="0.1" Maximum="3.0" Value="1.0" Name="ScaleYSlider" ValueChanged="OnGeometryFilterChanged"/>

                <Label Content="Угол поворота"/>
                <Slider Minimum="-180" Maximum="180" Value="0" Name="RotationSlider" ValueChanged="OnGeometryFilterChanged"/>

                <Label Content="Сдвиг (Shear)"/>
                <Slider Minimum="-1.0" Maximum="1.0" Value="0" Name="ShearSlider" ValueChanged="OnGeometryFilterChanged"/>


            </StackPanel>
        </Border>

        <Border Grid.Column="1" BorderBrush="DimGray" BorderThickness="1" Margin="5">
            <Image Name="MainImage"  Margin="5" Stretch="Uniform"/>
        </Border>

    </Grid>
</Window>
